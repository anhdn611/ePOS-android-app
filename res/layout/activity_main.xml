<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".MainActivity" >
    <RelativeLayout
        android:id="@+id/DanhMucLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="262" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_left_control_backgroud" >

            <LinearLayout
                android:id="@+id/top_left_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_chonsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_chonsp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_khachhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_kh"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_hoadon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_hoadon"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_hoadon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_hoadon_2"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/top_mid_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/top_left_button"
                android:layout_toStartOf="@+id/top_right_button"
                android:padding="10dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_search"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toStartOf="@+id/btn_search"
                        android:background="#bdd6f1"
                        android:hint="@string/search_hint"
                        android:lines="1"
                        android:singleLine="true"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/icon_search"
                        android:height="30dp"
                        android:width="30dp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_right_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/group_btn"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_danhsachsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_danhsach"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_yeuthich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_yeuthich"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/btn_themsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_themsanpham"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/below"
            android:layout_below="@id/top"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/below"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bottom_left_control_backgroud"
            android:baselineAligned="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical" >

                <Button
                    android:id="@+id/btn_testshop"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_daban"
                    android:drawableLeft="@drawable/icon_khoa"
                    android:gravity="center_vertical|center_horizontal|fill"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/khoa" />

                <Button
                    android:id="@+id/btn_XepBan"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_xepban"
                    android:drawableLeft="@drawable/icon_datlai"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/dat_lai" />

                <Button
                    android:id="@+id/button3"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_ketphien"
                    android:drawableLeft="@drawable/icon_trahang"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/tra_hang" />

                <Button
                    android:id="@+id/button4"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_ghichu"
                    android:drawableLeft="@drawable/icon_ghichu"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/ghi_chu" />

                <Button
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_xoa"
                    android:drawableLeft="@drawable/icon_tienich"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/tien_ich" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ThanhToanLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="626"
        android:background="@color/tt_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/thanh_toan_top"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/tt_top_background"
            android:gravity="right" >

            <ImageView
                android:id="@+id/imageViewTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:minWidth="119dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo_maybanhang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_print"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_wifi"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <Button
                    android:id="@+id/Button05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_setting"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <RelativeLayout
                android:id="@+id/customer_info"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/image_avatar"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ho_ten"
                        android:textColor="@color/White"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_customer_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nhom_kh"
                        android:textColor="@color/White"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0938883888"
                        android:textColor="@color/White"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/customer_info"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/TotalPayBackground"
                    android:gravity="right|center_vertical"
                    android:text="1180000"
                    android:textColor="@color/White"
                    android:textSize="45sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_chiet_khau"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="BL.1654.46230"
                        android:textColor="@color/ChietKhauColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_toStartOf="@+id/tv_chiet_khau"
                        android:gravity="center_vertical"
                        android:text="CK"
                        android:textColor="@color/ChietKhauColor" />

                    <TextView
                        android:id="@+id/tv_chiet_khau"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_phan_tram_trietkhau"
                        android:gravity="center_vertical|right"
                        android:minWidth="100dp"
                        android:paddingRight="5dp"
                        android:text="0%"
                        android:textColor="@color/ChietKhauColor" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/total_orders"
                android:layout_below="@id/money"
                android:background="@color/White"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/OrderlistView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#cccccc"
                    android:dividerHeight="1dp"
                    android:scrollbars="none"
                    tools:listitem="@layout/order_list_item" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/thanhtoan_bottom_button"
                android:layout_marginBottom="0dp"
                android:background="@color/White"
                android:gravity="right"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/order_item_bg" >

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:text="@string/tong_hang" />

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="105,600,000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/order_item_bg" >

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/giam_ga" />

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/order_item_bg" >

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vat" />

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </TableRow>

                    <TableRow
                        style="@style/tong_ket_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/order_item_bg" >

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/thanh_tien" />

                        <TextView
                            style="@style/tong_ket_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="105,600,000" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thanhtoan_bottom_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_thanh_toan"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_thanhtoan"
                    android:text="@string/thanh_toan" />

                <Button
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_luu"
                    android:minWidth="80dp"
                    android:text="@string/luu_tam" />

                <Button
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_xoa_ref"
                    android:minWidth="80dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/btn_xoa" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/below"
    android:layout_below="@id/top"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_menuheader2" >

        <Button
            android:id="@+id/btn_chinhsua_khuvuc"
            style="@style/button_chinhsua_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp" />

        <GridView
            android:id="@+id/GridView_Menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/btn_chinhsua_khuvuc"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/gopban_selector"
            android:numColumns="6"
            android:scrollbars="none"
            android:stretchMode="columnWidth" >
        </GridView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridView
            android:id="@+id/gridview_places"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="16dp"
            android:numColumns="6"
            android:padding="20dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="16dp" >
        </GridView>
    </LinearLayout>

</LinearLayout>